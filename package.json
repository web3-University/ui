{
  "name": "web3-university-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @web3-university/web dev",
    "dev:all": "pnpm --parallel --filter './packages/**' --filter './apps/**' dev",
    "build": "pnpm run build:packages && pnpm --filter @web3-university/web build",
    "start": "pnpm --filter @web3-university/web start",
    "lint": "biome check",
    "format": "biome format --write",
    "type-check": "pnpm --filter @web3-university/web type-check",
    "test": "pnpm run test:unit",
    "test:unit": "jest",
    "test:unit:ci": "jest --coverage --watchAll=false --ci --passWithNoTests",
    "test:e2e": "cypress open",
    "test:e2e:ci": "cypress run --headless --browser chrome",
    "prepare": "husky install",
    "lint:staged": "lint-staged",
    "build:packages": "lerna run build",
    "clean:packages": "lerna clean --yes",
    "publish:packages": "lerna publish",
    "build:libs": "pnpm --filter @web3-university/libs build",
    "clean:libs": "pnpm --filter @web3-university/libs clean",
    "publish:build": "rollup -c",
    "publish:clean": "rimraf dist",
    "publish:libs": "pnpm --filter @web3-university/libs publish:libs",
    "dev:web": "pnpm --filter @web3-university/web dev",
    "build:web": "pnpm --filter @web3-university/web build",
    "dev:storybook": "pnpm --filter @web3-university/storybook dev",
    "build:storybook": "pnpm --filter @web3-university/storybook build"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,js,jsx}": [
      "biome format --write"
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "biome format --write"
    ],
    "apps/**/*.{css,scss,less}": [
      "biome format --write"
    ],
    "packages/**/*.{css,scss,less}": [
      "biome format --write"
    ],
    "*.json": [
      "biome format --write"
    ]
  },
  "dependencies": {
    "siwe": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@jest/globals": "30.0.5",
    "@swc/core": "1.13.3",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "cypress": "15.2.0",
    "husky": "9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "jest-stare": "2.5.2",
    "jest-transform-stub": "^2.0.0",
    "lerna": "8.2.3",
    "lint-staged": "16.1.4"
  }
}
